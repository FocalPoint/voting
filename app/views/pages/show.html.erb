<%= @q[0].question %>
<% if @answers.count > 0 %>
  <% @answers.each do |a| %>
    <ul><%= AnswerVote.sum(:result, :conditions => ["answer_id = ?", a.id])%> | <%=link_to "Up Vote", up_vote_path(:a => a.id, :q => @q[0].id)%> | <%=link_to "Down Vote", down_vote_path(:a => a.id, :q => @q[0].id)%> | <%= a.answer %></ul>
  <% end %>
<% else %>
  <ul>no answers as of yet, be the first!</ul>
<% end %>
<%= form_tag add_answer_url do  %>
<%= text_area_tag 'answer' %>
<%= hidden_field_tag(:q_id, @q[0].id) %>	
<%= submit_tag %>
<% end %>